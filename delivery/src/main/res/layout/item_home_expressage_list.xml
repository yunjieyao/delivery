<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_user_head_pic"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_portrait" />

    <TextView
        android:id="@+id/tv_expressage_lead_reward"
        style="@style/Text_ff3b30.24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="1元" />

    <TextView
        android:id="@+id/tv_delivery_type_and_site"
        style="@style/Text_333.24"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@id/tv_expressage_lead_reward"
        android:layout_toRightOf="@id/iv_user_head"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        tools:text="取货号：Z227" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@id/tv_expressage_lead_reward"
        android:layout_toRightOf="@id/iv_user_head"
        android:background="@drawable/bg_horizontal_divide_line" />

    <TextView
        android:id="@+id/tv_expressage_remark"
        style="@style/Text_333.24"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@id/tv_expressage_lead_reward"
        android:layout_toRightOf="@id/iv_user_head"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        tools:text="备注：是啥时候好1借记卡kj" />


</RelativeLayout>